<%- include("partials/header.ejs") %>

<section class="my-5">
    <div class="d-flex justify-content-center">
        <h1 class=" my-5 heading p-2">ADD NEW BOOK HERE</h1>
    </div>
    
    <form action="/new_book" method="post">
        <div class="col-lg-6 m-auto">
            
            <div class="form-group row my-2">
                <label for="bookTitle" class="col-sm-4 col-form-label">Book Title:*</label>
                <div class="col-sm-8">
                <input type="text" class="form-control" name="bookTitle" aria-describedby="emailHelp" placeholder="Enter Book Name" autocomplete="off" required>
                </div>
            </div>
            <div class="form-group row my-2">
              <label for="author" class="col-sm-4 col-form-label">Author:*</label>
              <div class="col-sm-8">
                <input type="text" class="form-control" name="author" placeholder="Author Name" autocomplete="off" required>
              </div>
            </div>
            <div class="form-group row my-2">
                <label for="isbn" class="col-sm-4 col-form-label">Book Cover ISBN-13 from Open Library:</label>
                <div class="col-sm-8">
                  <input type="number" class="form-control" name="isbn" placeholder="ISBN Number" min="1000000000000" max="9999999999999">
                </div>
              </div>
            <div class="form-group row my-2">
              <label for="rating" class="col-sm-4 col-form-label">Your Rating for the book:*</label>
              <div class="col-sm-8">
                <select class="form-control" name="rating" required>
                    <% for(var x=1;x<=10;x++){ %>
                    <option><%= x %></option>
                    <% } %>
                </select>
              </div>
            </div>
            <div class="form-group row my-2">
                <label for="dateRead" class="col-sm-4 col-form-label">Date you read:*</label>
                <div class="col-sm-8">
                    <input type="date" class="form-control" name="dateRead" placeholder="Author Name" min="1900-01-01" max="<% var nowDate = new Date();%><%=nowDate.getFullYear()+'-'+(nowDate.getMonth()+1)+'-'+("0" + nowDate.getDate()).slice(-2) %>" required>
                  </div>
            </div>
            <div class="form-group row my-2">
                <label for="note" class="col-sm-4 col-form-label">Notes:*</label>
                <div class="col-sm-8">
                  <textarea class="form-control" name="note" placeholder="Add Your Note" rows="4" required></textarea>
                </div>
              </div>
            <button type="submit" class="btn btn-dark bookSubmitButton my-2">Submit</button>
        </div>
    </form>
</section>




<%- include("partials/footer.ejs") %>